# ----------------------------------------------------------------------------------------------
# Git Ignores @see https://github.com/github/gitignore
# ----------------------------------------------------------------------------------------------


# Application Files
# ----------------------------------------------------------------------------------------------
*.env
*.env.*
!*.env.example
*sitemap.xml
*sitemap.xml.gz
wp-config-local.php
wp-cli.local.yml


# Wordpress Files
# ----------------------------------------------------------------------------------------------
# Ignore WP Core:
web/wp

web/app/*
web/app/uploads
web/app/blogs.dir/
web/app/upgrade/
web/app/backup-db/
web/app/updraft/
web/app/backupwordpress-*/
web/app/managewp/backups/
web/app/advanced-cache.php
web/app/wp-cache-config.php
web/app/cache/
web/app/backups/

# Ignore everything except:
!web/app/.gitignore

# Ignore everything except certain plugins:
!web/app/plugins/
web/app/plugins/*
!web/app/plugins/index.php
!web/app/plugins/wp-migrate-db-pro
!web/app/plugins/wp-migrate-db-pro-cli
!web/app/plugins/wp-migrate-db-pro-media-files

# Ignore everything except certain mu-plugins:
!web/app/mu-plugins/
web/app/mu-plugins/*
!web/app/mu-plugins/index.php
!web/app/mu-plugins/bedrock-autoloader.php
!web/app/mu-plugins/disallow-indexing.php
!web/app/mu-plugins/disable-wp-admin.php
!web/app/mu-plugins/register-theme-directory.php
!web/app/mu-plugins/disable-plugins-for-development.php

# Ignore everything except all theme files:
!web/app/themes/


# Pantheon
# ----------------------------------------------------------------------------------------------
pantheon.upstream.yml

# Composer
# ----------------------------------------------------------------------------------------------
vendor/*


