{
    "name": "arity/wordpress-theme",
    "type": "wordpress-theme",
    "autoload": {
        "psr-4": {
            "Arity\\": "app/lib/arity/src/Arity",
            "ModuleBuilder\\": "app/lib/arity/src/ModuleBuilder"
        }
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.2.0",
        "roots/soil": "^3.7",
        "wordplate/plate": "^3.0",
        "wordplate/acf": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^2.9.0",
        "phpmd/phpmd": "^2.6.0"
    },
    "scripts": {
        "build-assets": [
            "composer install --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
        ],
        "build-dev-assets": [
            "composer install --no-ansi --no-interaction --optimize-autoloader --no-progress"
        ],
        "test": [
            "@code-sniff"
        ],
        "code-sniff": [
            "./vendor/bin/phpcs"
        ]
    },
    "extra": {
        "installer-paths": {
            "app/lib/{$name}/": [
                "type:wordpress-muplugin",
                "type:wordpress-plugin"
            ]
        }
    }
}
