{
    "name": "arity/wordpress",
    "description": "",
    "version": "0.1.0",
    "type": "project",
    "keywords": [],
    "minimum-stability": "alpha",
    "require": {
        "php": ">=5.6",
        "composer/installers": "^1.3.0",
        "vlucas/phpdotenv": "^2.4.0",
        "johnpbloch/wordpress": "^4.6",
        "oscarotero/env": "^1.0",
        "roots/wp-password-bcrypt": "^1.0.0",
        "symfony/http-foundation": "^3.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "scripts": {
        "build-assets": [
            "composer install --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
        ],
        "build-dev-assets": [
            "composer install --no-ansi --no-interaction --optimize-autoloader --no-progress"
        ],
        "build-theme-assets": [
            "./scripts/build-theme-assets.sh"
        ],
        "post-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": []
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "installer-paths": {
            "web/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    }
}
