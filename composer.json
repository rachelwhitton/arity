{
  "name": "arity/wordpress",
  "description": "",
  "version": "0.1.0",
  "type": "project",
  "require": {
    "php": ">=7.0",
    "composer/installers": "~1.3.0",
    "vlucas/phpdotenv": "^2.4.0",
    "johnpbloch/wordpress": "^4.6",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "^1.0",
    "symfony/http-foundation": "^3.3",
    "koodimonni/composer-dropin-installer": "*",

    "wpackagist-plugin/aryo-activity-log": "^2.3",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.6.0",
    "wpackagist-plugin/disable-blog": "^0.4",
    "wpackagist-plugin/disable-comments": "^1.6",
    "wpackagist-plugin/enable-media-replace": "^3.0",
    "wpackagist-plugin/ewww-image-optimizer": "^3.5",
    "wpackagist-plugin/force-regenerate-thumbnails": "^2.0",
    "wpackagist-plugin/post-types-order": "^1.9",
    "wpackagist-plugin/redirection": "^2.6",
    "wpackagist-plugin/wordpress-seo": "^5.1",
    "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "^2.0",
    "wpackagist-plugin/pantheon-advanced-page-cache": "^0.2",
    "wpackagist-plugin/pantheon-hud": "^0.1",
    "wpackagist-plugin/wp-redis": "^0.7",

    "wpackagist-plugin/disable-embeds": "^1.3",
    "wpackagist-plugin/disable-xml-rpc": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.6.2",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
        },
        "require": {
          "philippbaschke/acf-pro-installer": "^1.0",
          "composer/installers": "^1.0"
        }
      }
    }
  ],
  "scripts": {
    "post-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": [
      "vendor/bin/phpcs"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "wpackagist-plugin/disable-embeds",
        "wpackagist-plugin/disable-xml-rpc"
      ],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "dropin-paths": {
      "web/app/": [
        "package:wpackagist-plugin/wp-redis:object-cache.php"
      ]
    },
    "wordpress-install-dir": "web/wp"
  }
}
